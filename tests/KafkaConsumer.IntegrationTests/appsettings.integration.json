{
  "ExternalSystems": {
    "Authentication": {
      "TokenUrl": "https://test.okta.com/oauth2/v1/token",
      "Scopes": "read write"
    },
    "ApiDefinitions": [
      {
        "Name": "OrderApi",
        "BaseUrl": "https://api.test.example.com",
        "RelativeUrls": {
          "UpdateOrder": "api/orders/{orderId}"
        }
      }
    ]
  },
  "Okta": {
    "TokenUrl": "https://test.okta.com/oauth2/v1/token",
    "ClientId": "test-client-id",
    "ClientSecret": "test-client-secret",
    "DefaultTokenLifetimeSeconds": 3600
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "SecurityProtocol": "Plaintext",
    "ClientId": "integration-test-client",
    "GroupId": "integration-test-group",
    "AutoOffsetReset": "Latest"
  },
  "TopicConfigurations": {
    "CurrentSet": "TestSet",
    "Sets": {
      "TestSet": [
        {
          "SubscrptionDescription": "Process order updates",
          "TopicName": "order-updates",
          "EventType": "order.updated",
          "HandlerNames": [
            "KafkaConsumer.Features.UpdateOrder.Handlers.UpdateOrderHandler"
          ]
        }
      ]
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
